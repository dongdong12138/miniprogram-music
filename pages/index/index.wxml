<view>

	<!-- 轮播图 -->
	<swiper indicator-dots indicator-color='ivory' indicator-active-color='#d43c33' class="banners">
		<swiper-item wx:for="{{bannerList}}" wx:key="bannerId">
			<image src="{{item.pic}}"></image>
		</swiper-item>
	</swiper>

	<!-- 图标导航 -->
  <view class="navContainer">
    <view class="navItem" bindtap="toRecommendSong">
      <text class="iconfont icon-meirituijian"></text>
      <text>每日推荐</text>
    </view>
    <view class="navItem" bindtap="toOther">
      <text class="iconfont icon-gedan1"></text>
      <text>歌单</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-icon-ranking"></text>
      <text>排行榜</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-diantai"></text>
      <text>电台</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-zhiboguankanliangbofangsheyingshexiangjixianxing"></text>
      <text>直播</text>
    </view>
  </view>

	<!-- 推荐歌曲 -->
	<view class="recommendContainer">
		<!-- 头部 -->
		<view class="header">
			<text class="title">推荐歌曲</text>
			<view>
				<text>为你精心推荐</text>
				<text class="more">查看更多</text>
			</view>
		</view>
		<!-- 内容 -->
		<scroll-view enable-flex scroll-x class="recommendScroll">
			<view wx:for="{{5}}" wx:key="index" class="scrollItem">
				<image src="/static/images/nvsheng.jpg"></image>
				<text>哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈</text>
			</view>
		</scroll-view>
	</view>

</view>
